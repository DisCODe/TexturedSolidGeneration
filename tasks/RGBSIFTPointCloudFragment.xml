<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Micha≈Ç Laszkowski</name>
			<link></link>
		</Author>
		
		<Description>
                        <brief>Generates Cylinder Model, transform and cut it</brief>
                        <full></full>
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Main">
			<Executor name="Processing"  period="1">
                                <Component name="TriggerRead" type="CvBasic:Trigger" priority="1" bump="0">
                                        <param name="">1</param>
                                </Component>
                                <Component name="ReaderXYZRGB" type="PCL:PCDReader" priority="2" bump="0">
                                        <param name="filename">/home/discode/cuboids/models/loyd_kinect_xyzrgb.pcd</param>
                                </Component>
                                <Component name="ReaderXYZSIFT" type="PCL:PCDReader" priority="3" bump="0">
                                        <param name="filename">/home/discode/cuboids/models/loyd_kinect_xyzsift.pcd</param>
                                </Component>
                                <Component name="HMP1" type="CvCoreTypes:HomogenousMatrixProvider" priority="4" bump="0">
                                    <param name="offset.x">0</param>
                                    <param name="offset.y">0</param>
                                    <param name="offset.z">0</param>
                                    <param name="offset.roll">0</param>
                                    <param name="offset.pitch">0</param>
                                    <param name="offset.yaw">0</param>
                                </Component>
                                <Component name="CloudTransformer1" type="PCL:CloudTransformer" priority="5" bump="0">
                                </Component>
                                <Component name="PassThrough" type="PCL:PassThrough" priority="6" bump="0">
                                    <param name="x.a">-1</param>
                                    <param name="x.b">1</param>
                                    <param name="y.a">-1</param>
                                    <param name="y.b">1</param>
                                    <param name="z.a">-1</param>
                                    <param name="z.b">1</param>
                                    <param name="negative_x">0</param>
                                    <param name="negative_y">0</param>
                                    <param name="negative_z">0</param>
                                </Component>
                                <Component name="HMP2" type="CvCoreTypes:HomogenousMatrixProvider" priority="7" bump="0">
                                    <param name="offset.x">0</param>
                                    <param name="offset.y">0</param>
                                    <param name="offset.z">0</param>
                                    <param name="offset.roll">0</param>
                                    <param name="offset.pitch">0</param>
                                    <param name="offset.yaw">0</param>
                                </Component>
                                <Component name="CloudTransformer2" type="PCL:CloudTransformer" priority="8" bump="0">
                                </Component>
                                <Component name="TriggerWrite" type="CvBasic:Trigger" priority="9" bump="0">
                                        <param name="">1</param>
                                </Component>
                                <Component name="Writer" type="PCL:PCDWriter" priority="10" bump="0">
                                        <param name="suffix">1</param>
                                        <param name="filename">/home/mlaszkow/test/cuboid</param>
                                </Component>
			</Executor>

                        <Executor name="Visualization" period="0.5">
                                <Component name="WindowPCL" type="PCL:CloudViewer" priority="1" bump="0">
                                    <!--<param name="coordinate_system">1</param>-->
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
                <Source name="TriggerRead.out_trigger">
                        <sink>ReaderXYZRGB.in_trigger</sink>
                        <sink>ReaderXYZSIFT.in_trigger</sink>
                </Source>
                <Source name="ReaderXYZRGB.out_cloud_xyzrgb">
                        <sink>CloudTransformer1.in_cloud_xyzrgb</sink>
                </Source>
                <Source name="ReaderXYZSIFT.out_cloud_xyzsift">
                        <sink>CloudTransformer1.in_cloud_xyzsift</sink>
                </Source>
                <Source name="HMP1.out_homogMatrix">
                        <sink>CloudTransformer1.in_hm</sink>
                </Source>
                <Source name="CloudTransformer1.out_cloud_xyzrgb">
                        <sink>PassThrough.in_cloud_xyzrgb</sink>
                </Source>
                <Source name="CloudTransformer1.out_cloud_xyzsift">
                        <sink>PassThrough.in_cloud_xyzsift</sink>
                </Source>
                <Source name="PassThrough.out_cloud_xyzrgb">
                        <sink>CloudTransformer2.in_cloud_xyzrgb</sink>
                </Source>
                <Source name="PassThrough.out_cloud_xyzsift">
                        <sink>CloudTransformer2.in_cloud_xyzsift</sink>
                </Source>
                <Source name="HMP2.out_homogMatrix">
                        <sink>CloudTransformer2.in_hm</sink>
                </Source>
                <Source name="CloudTransformer2.out_cloud_xyzrgb">
                        <sink>Writer.in_cloud_xyzrgb</sink>
                        <sink>WindowPCL.in_cloud_xyzrgb</sink>
                </Source>
                <Source name="CloudTransformer2.out_cloud_xyzsift">
                        <sink>Writer.in_cloud_xyzsift</sink>
                        <sink>WindowPCL.in_cloud_xyzsift</sink>
                </Source>
                <Source name="TriggerWrite.out_trigger">
                        <sink>Writer.in_trigger</sink>
                </Source>
	</DataStreams>
</Task>


