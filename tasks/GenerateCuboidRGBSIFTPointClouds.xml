<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Micha≈Ç Laszkowski</name>
			<link></link>
		</Author>
		
		<Description>
                        <brief>Generates Cuboid Model and stores it in PCD files</brief>
                        <full></full>
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Main">
			<Executor name="Processing"  period="1">
                                <Component name="Generator" type="TexturedSolidGeneration:CuboidModelGenerator" priority="1" bump="0">
                                        <param name="dataJSONname">/home/discode/cuboids/dataset/loyd_kinect/loyd.json</param>
				</Component>
                                <Component name="Trigger" type="CvBasic:Trigger" priority="2" bump="0">
                                        <param name="">1</param>
                                </Component>
                                <Component name="WriterXYZRGB" type="PCL:PCDWriter" priority="3" bump="0">
                                        <param name="filename">/home/mlaszkow/test/cuboid_xyzrgb.pcd</param>
                                </Component>
                                <Component name="WriterXYZSIFT" type="PCL:PCDWriter" priority="4" bump="0">
                                        <param name="filename">/home/mlaszkow/test/cuboid_xyzsift.pcd</param>
                                </Component>
			</Executor>

			<Executor name="Visualization" period="1">
                                <Component name="WindowPCL" type="SIFTObjectModel:CloudViewer" priority="1" bump="0">
<!--                                    <param name="coordinate_system">false</param>-->
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
                <Source name="Generator.out_cloud_xyzrgb">
                        <sink>WriterXYZRGB.in_cloud_xyzrgb</sink>
                        <sink>WindowPCL.in_cloud_xyzrgb</sink>
                </Source>
                <Source name="Generator.out_cloud_xyzsift">
                        <sink>WriterXYZSIFT.in_cloud_xyzsift</sink>
                        <sink>WindowPCL.in_cloud_xyzsift</sink>
                </Source>
                <Source name="Trigger.out_trigger">
                        <sink>WriterXYZRGB.in_trigger_xyzrgb</sink>
                        <sink>WriterXYZSIFT.in_trigger_xyzsift</sink>
                </Source>
	</DataStreams>
</Task>




